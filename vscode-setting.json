  "editor.fontSize": 14,
  //Emmet 设置
  "emmet.syntaxProfiles": {
    "vue-html": "html",
    "vue": "html"
  },
  "vsicons.dontShowNewVersionMessage": true,
  "fileheader.Author": "",
  "fileheader.LastModifiedBy": "",
